<%- include("partials/header"); -%>

<div class="profilepage">
  <div class="row">
    <div class="col-md-12">
      <h4>Your Profile</h4>
      <hr>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">

      <form action="/profile" method="post">

        <div class="form-group row">
          <label class="col-4 col-form-label">First Name</label>
          <div class="col-6">
            <input name="firstName" placeholder="First Name" class="form-control here" type="text">
          </div>
        </div>
        <div class="form-group row">
          <label  class="col-4 col-form-label">Last Name</label>
          <div class="col-6">
            <input name="lastName" placeholder="Last Name" class="form-control here" type="text">
          </div>
        </div>
        <div class="form-group row">
          <label for="email" class="col-4 col-form-label">Email</label>
          <div class="col-6">
            <input name="email" placeholder="Email" class="form-control here" required="required" type="text">
          </div>
        </div>
        <div class="form-group row">
          <label  class="col-4 col-form-label">Gender</label>
          <div class="col-6">
            Male <input type="radio" name="gender" value="male">
            Female <input type="radio" name="gender" value="female">
            Other <input type="radio" name="gender" value="other">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-4 col-form-label">Age</label>
          <div class="col-6">
            <input name="age" placeholder="Age" class="form-control here" required="required" type="text">
          </div>
        </div>
        <div class="form-group row">
          <label  class="col-4 col-form-label">Posts Created by You</label>
          <div class="col-6">
            <input name="posts" placeholder="Posts Created by You" class="form-control here" required="required" type="text">
          </div>
        </div>
        <div class="offset-4 col-8">
          <button name="submit" type="submit" class="btn btn-primary">Update My Profile</button>
        </div>
      </form>

    </div>
  </div>

</div>
